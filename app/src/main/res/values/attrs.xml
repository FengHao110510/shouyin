<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!--侧滑删除-->
    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean"/>
        <attr name="ios" format="boolean"/>
        <attr name="leftSwipe" format="boolean"/>
    </declare-styleable>

    <!-- ========================================= 自定义通用顶部操作栏 =========================================== -->
    <declare-styleable name="CommonTopBar">
        <attr name="left_img_src" format="reference" />
        <attr name="right_img_src" format="reference" />
        <attr name="left_img_background" format="reference" />
        <attr name="right_img_background" format="reference" />
        <attr name="left_text" format="string|reference" />
        <attr name="right_text" format="string|reference" />
        <attr name="right_icon" format="string|reference" />
        <attr name="center_text" format="string|reference" />
        <attr name="left_text_color" format="reference|color" />
        <attr name="right_text_color" format="reference|color" />
        <attr name="center_text_color" format="reference|color" />
        <attr name="background_color" format="reference|color" />

        <attr name="right_icon_visibility" format="enum">
            <enum name="GONE" value="0x00000008" />
            <enum name="INVISIBLE" value="0x00000004" />
            <enum name="VISIBLE" value="0x00000000" />
        </attr>
        <attr name="left_text_visibility" format="enum">
            <enum name="GONE" value="0x00000008" />
            <enum name="INVISIBLE" value="0x00000004" />
            <enum name="VISIBLE" value="0x00000000" />
        </attr>
        <attr name="right_text_visibility" format="enum">
            <enum name="GONE" value="0x00000008" />
            <enum name="INVISIBLE" value="0x00000004" />
            <enum name="VISIBLE" value="0x00000000" />
        </attr>
        <attr name="center_text_visibility" format="enum">
            <enum name="GONE" value="0x00000008" />
            <enum name="INVISIBLE" value="0x00000004" />
            <enum name="VISIBLE" value="0x00000000" />
        </attr>
        <attr name="right_view_visibility" format="enum">
            <enum name="GONE" value="0x00000008" />
            <enum name="INVISIBLE" value="0x00000004" />
            <enum name="VISIBLE" value="0x00000000" />
        </attr>
        <attr name="bottom_line_visibility" format="enum">
            <enum name="GONE" value="0x00000008" />
            <enum name="INVISIBLE" value="0x00000004" />
            <enum name="VISIBLE" value="0x00000000" />
        </attr>
    </declare-styleable>
    <!-- ========================================= 自定义通用顶部操作栏 END =========================================== -->

    <!--=================================== 垂直 TabLayout 属性 ==============================================-->
    <declare-styleable name="VerticalTabLayout">
        <attr name="tabIndicatorColor" format="color" />
        <attr name="tabIndicatorWidth" format="dimension" />
        <attr name="tabIndicatorCorners" format="dimension" />
        <attr name="tabIndicatorGravity" format="enum">
            <enum name="left" value="3" />
            <enum name="right" value="5" />
            <enum name="fill" value="119" />
        </attr>
        <attr name="dividerHeight" format="dimension" />
        <attr name="dividerPadding" format="dimension" />
        <attr name="dividerColor" format="color" />
        <attr name="tabArrowColor" format="color" />
        <attr name="tabArrowGravity" format="enum">
            <enum name="left" value="3" />
            <enum name="right" value="5" />
        </attr>
        <attr name="tabArrowType" format="enum">
            <enum name="inner" value="1" />
            <enum name="outer" value="2" />
        </attr>
        <attr name="tabHeight" format="dimension" />
        <attr name="tabTextColor" format="color" />
        <attr name="tabSelectedTextColor" format="color" />
        <attr name="tabTextAppearance" format="reference" />
        <attr name="tabTextSize" format="dimension" />s
        <attr name="tabPadding" format="dimension" />
        <attr name="tabPaddingLeft" format="dimension" />
        <attr name="tabPaddingRight" format="dimension" />
        <attr name="tabPaddingTop" format="dimension" />
        <attr name="tabPaddingBottom" format="dimension" />
        <attr name="tabIconPadding" format="dimension" />
        <attr name="tabViewGravity" format="enum">
            <enum name="left" value="3" />
            <enum name="right" value="5" />
            <enum name="center" value="17" />
            <enum name="center_vertical" value="16" />
            <enum name="center_horizontal" value="1" />
            <enum name="bottom" value="80" />
            <enum name="top" value="48" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TabItem">
        <attr name="text"/>
        <attr name="iconGravity" format="enum">
            <enum name="left" value="3" />
            <enum name="right" value="5" />
            <enum name="bottom" value="80" />
            <enum name="top" value="48" />
        </attr>
        <attr name="icon" format="reference" />
        <attr name="iconWidth" format="dimension" />
        <attr name="iconHeight" format="dimension" />
    </declare-styleable>


</resources>