<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/ll_payfor_payfor"
    tools:context="com.hongsou.douguoshouyin.activity.payfor.payfor.PayForActivity">

    <include layout="@layout/module_include_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_payfor_payfor_xiaofeijine"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_payfor_payfor_xiaofeijiine_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_main_payfor_kaidan"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_payfor_payfor_xiaofeijiine_icon"
                android:text="消费金额"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_payfor_payfor_xiaofeijine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="16sp" />


        </RelativeLayout>

        <View style="@style/view_line_horizontal_05" />

        <RelativeLayout
            android:id="@+id/rl_payfor_payfor_xuanzeyouhui"

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_payfor_payfor_xuanzeyouhui_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_main_payfor_gift"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_payfor_payfor_xuanzeyouhui_icon"
                android:text="选择优惠"
                android:textColor="@color/gray"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_payfor_payfor_jiantou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:text=">"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_payfor_payfor_shezhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_payfor_payfor_jiantou"
                android:text="去选择"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </RelativeLayout>

        <View style="@style/view_line_horizontal_05" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/tv_payfor_payfor_yingshoujine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0.0"
                android:textColor="@color/red"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_toLeftOf="@id/tv_payfor_payfor_yingshoujine"
                android:text="应收金额(元)："
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/btn_mine_mendian_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0.1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_payfor_payfor_btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_payfor_payfor_btn2"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_payfor_payfor_btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"

                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_payfor_payfor_btn_delet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"

                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="清空"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0.1dp"

            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_payfor_payfor_btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="4"

                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_payfor_payfor_btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="5"

                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_payfor_payfor_btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"

                android:text="6"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_payfor_payfor_btn_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"

                android:text="@string/icon_main_payfor_cancle"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="0.1dp"
            android:layout_marginRight="0.1dp"
            android:layout_marginTop="0.1dp"

            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_payfor_payfor_btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0.1dp"
                android:layout_marginLeft="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_marginTop="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="7"

                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_payfor_payfor_btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0.1dp"
                android:layout_marginLeft="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_marginTop="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="8"

                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_payfor_payfor_btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0.1dp"
                android:layout_marginLeft="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_marginTop="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"

                android:text="9"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_payfor_payfor_btn_shang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_marginTop="0.1dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:gravity="center|bottom"

                android:text="收"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0.1dp"
            android:layout_marginLeft="0.1dp"
            android:layout_marginRight="0.1dp"

            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_payfor_payfor_btn_dian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0.1dp"
                android:layout_marginLeft="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_marginTop="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="."

                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_payfor_payfor_btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0.1dp"
                android:layout_marginLeft="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_marginTop="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"

                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_payfor_payfor_btn00"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0.1dp"
                android:layout_marginLeft="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_marginTop="0.1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"

                android:text="00"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_payfor_payfor_btn_xia"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0.1dp"
                android:layout_marginLeft="0.1dp"
                android:layout_marginRight="0.1dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:gravity="center|top"

                android:text="款"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
