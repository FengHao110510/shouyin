<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.hongsou.douguoshouyin.activity.turnover.OrderShaixuanActivity">

    <FrameLayout
        android:id="@+id/fl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_base_yellow">

        <TextView
            android:id="@+id/tv_shaixuan_finish_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="2dp"

            android:text="@string/icon_fanhuijian"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_shaixuan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="17sp" />


        <LinearLayout
            android:id="@+id/ll_shaixuan_chongzhi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shaixuan_chongzhi_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_main_turnover_chongzhi"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重置"
                android:textColor="@color/black"
                android:textSize="10sp" />

        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_titlebar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="支付状态"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_turnover_turnover_shaixuan_shoukuanchenggong"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@drawable/shaixuan_nomal"
                        android:gravity="center"
                        android:text="收款成功"

                        android:textColor="@color/gray"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_turnover_turnover_shaixuan_tuikuanchenggong"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="25dp"

                        android:background="@drawable/shaixuan_nomal"
                        android:gravity="center"
                        android:text="退款成功"
                        android:textColor="@color/gray"

                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_turnover_turnover_shaixuan_shoukuanshibai"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="25dp"
                        android:background="@drawable/shaixuan_nomal"
                        android:gravity="center"
                        android:text="收款失败"
                        android:textColor="@color/gray"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="支付渠道"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_turnover_turnover_shaixuan_weixin"
                        android:layout_width="70dp"
                        android:layout_height="35dp"

                        android:background="@drawable/shaixuan_nomal"
                        android:gravity="center"
                        android:text="微信"
                        android:textColor="@color/gray"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_turnover_turnover_shaixuan_zhifubao"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="25dp"

                        android:background="@drawable/shaixuan_nomal"
                        android:gravity="center"
                        android:text="支付宝"
                        android:textColor="@color/gray"

                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_turnover_turnover_shaixuan_xianjin"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="25dp"

                        android:background="@drawable/shaixuan_nomal"
                        android:gravity="center"
                        android:text="现金"
                        android:textColor="@color/gray"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_turnover_turnover_shaixuan_yinhangka"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:background="@drawable/shaixuan_nomal"
                        android:gravity="center"
                        android:text="银行卡"

                        android:textColor="@color/gray"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_turnover_turnover_shaixuan_erweimazhuopai"
                        android:layout_width="70dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="25dp"
                        android:background="@drawable/shaixuan_nomal"
                        android:gravity="center"
                        android:text="二维码桌卡"
                        android:visibility="gone"
                        android:textColor="@color/gray"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="交易时间"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_turnover_turnover_shaixuan_starttime"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/shaixuan_nomal"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="00"
                        android:textColor="@color/gray"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="至"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tv_turnover_turnover_shaixuan_endtime"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/shaixuan_nomal"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="00"
                        android:textColor="@color/gray"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_turnover_turnover_shaixuan_shaixuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/btn_black"
        android:text="筛选"
        android:textColor="@color/white" />
</RelativeLayout>
