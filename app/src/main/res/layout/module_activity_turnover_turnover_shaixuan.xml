<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <com.hongsou.douguoshouyin.views.CommonTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_text="@string/icon_back"
        app:center_text="订单筛选"
        app:right_icon="@string/icon_main_turnover_chongzhi"
        app:right_text="重置"
        app:right_view_visibility="VISIBLE"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_titlebar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_order_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订单来源"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tfl_order_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    app:max_select="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="支付状态"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tfl_pay_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    app:max_select="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_channel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="支付渠道"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tfl_pay_channel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    app:max_select="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="交易时间"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_turnover_turnover_shaixuan_starttime"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/shaixuan_nomal"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="00"
                        android:textColor="@color/gray"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="至"
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tv_turnover_turnover_shaixuan_endtime"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@drawable/shaixuan_nomal"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="00"
                        android:textColor="@color/gray"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_turnover_turnover_shaixuan_shaixuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/btn_black"
        android:text="筛选"
        android:textColor="@color/white" />
</LinearLayout>
