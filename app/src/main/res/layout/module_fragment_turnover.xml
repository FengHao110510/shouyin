<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_titlebar_turnover"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_base_yellow">

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_titlebar_turnover_tab"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/tb_turnover"
                app:tabBackground="@drawable/tb_selector"
                app:tabIndicatorColor="@color/transparent"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/black">


            </android.support.design.widget.TabLayout>

            <LinearLayout
                android:id="@+id/ll_titlebar_turnover_shaixuan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_titlebar_turnover_shaixuan_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/icon_main_turnover_shaixuan"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="筛选"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_titlebar_turnover_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>