<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/module_include_titlebar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_payfor_choose_category_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="15dp"></android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_base_yellow"
        android:textColor="@color/white"
        android:text="确定"
        android:id="@+id/tv_payfor_choose_category_yes"
        android:textSize="20dp"
        android:gravity="center"
        />
</LinearLayout>