<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_dialog_edit_content"
            style="@style/et_style"
            android:hint="打印机名称"
            android:padding="@dimen/margin_12"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_edit_icon"
            style="@style/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_payfor_commodity_class_tianjia" />

        <View style="@style/view_line_horizontal_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_6"
        android:layout_marginTop="@dimen/margin_6"
        android:orientation="horizontal"
        android:padding="@dimen/margin_12">

        <LinearLayout
            android:id="@+id/ll_printer_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_printer_pay_icon"
                style="@style/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_printer_type"
                android:textSize="24sp" />

            <TextView
                style="@style/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收银打印" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_printer_kitchen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_printer_kitchen_icon"
                style="@style/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_printer_type"
                android:textSize="24sp" />

            <TextView
                style="@style/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="后厨打印" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/margin_12"
            android:text="取消"
            android:textColor="@color/gray" />

        <View style="@style/view_line_vertical_1" />

        <TextView
            android:id="@+id/tv_dialog_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/margin_12"
            android:text="确定"
            android:textColor="@color/gray" />
    </LinearLayout>

</LinearLayout>