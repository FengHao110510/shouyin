<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/btn_mine_mendian_bg"
    android:padding="@dimen/keyboard_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/keyboard_1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/keyboard_height"
                    android:layout_margin="@dimen/keyboard_margin"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gird_item"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/color_title"
                    android:textSize="@dimen/keyboard_txt_size" />

                <TextView
                    android:id="@+id/keyboard_2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/keyboard_height"
                    android:layout_margin="@dimen/keyboard_margin"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gird_item"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/color_title"
                    android:textSize="@dimen/keyboard_txt_size" />

                <TextView
                    android:id="@+id/keyboard_3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/keyboard_height"
                    android:layout_margin="@dimen/keyboard_margin"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gird_item"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/color_title"
                    android:textSize="@dimen/keyboard_txt_size" />

                <TextView
                    android:id="@+id/keyboard_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="@string/icon_main_payfor_cancle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/keyboard_txt_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/keyboard_4"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/keyboard_height"
                    android:layout_margin="@dimen/keyboard_margin"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gird_item"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/color_title"
                    android:textSize="@dimen/keyboard_txt_size" />

                <TextView
                    android:id="@+id/keyboard_5"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/keyboard_height"
                    android:layout_margin="@dimen/keyboard_margin"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gird_item"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/color_title"
                    android:textSize="@dimen/keyboard_txt_size" />

                <TextView
                    android:id="@+id/keyboard_6"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/keyboard_height"
                    android:layout_margin="@dimen/keyboard_margin"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gird_item"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/color_title"
                    android:textSize="@dimen/keyboard_txt_size" />

                <TextView
                    android:id="@+id/keyboard_clean"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.1dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="清除"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/keyboard_7"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/keyboard_height"
                    android:layout_margin="@dimen/keyboard_margin"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gird_item"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/color_title"
                    android:textSize="@dimen/keyboard_txt_size" />

                <TextView
                    android:id="@+id/keyboard_8"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/keyboard_height"
                    android:layout_margin="@dimen/keyboard_margin"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gird_item"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/color_title"
                    android:textSize="@dimen/keyboard_txt_size" />

                <TextView
                    android:id="@+id/keyboard_9"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/keyboard_height"
                    android:layout_margin="@dimen/keyboard_margin"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gird_item"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/color_title"
                    android:textSize="@dimen/keyboard_txt_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/keyboard_dot"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/keyboard_height"
                    android:layout_margin="@dimen/keyboard_margin"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gird_item"
                    android:gravity="center"
                    android:text="."
                    android:textColor="@color/color_title"
                    android:textSize="@dimen/keyboard_txt_size" />

                <TextView
                    android:id="@+id/keyboard_0"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/keyboard_height"
                    android:layout_margin="@dimen/keyboard_margin"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gird_item"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/color_title"
                    android:textSize="@dimen/keyboard_txt_size" />

                <TextView
                    android:id="@+id/keyboard_00"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/keyboard_height"
                    android:layout_margin="@dimen/keyboard_margin"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gird_item"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/color_title"
                    android:textSize="@dimen/keyboard_txt_size" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/keyboard_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/keyboard_margin"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20"
            android:layout_weight="1"
            android:ems="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="收款"
            android:textColor="@color/white"
            android:textSize="@dimen/keyboard_txt_size" />
    </LinearLayout>
</LinearLayout>