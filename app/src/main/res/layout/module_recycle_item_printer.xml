<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_printer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_12"
                    android:text="name"
                    android:textColor="@color/color_subtitle"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_printer_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_black_6"
                    android:paddingBottom="@dimen/dp_4"
                    android:paddingLeft="@dimen/margin_12"
                    android:paddingRight="@dimen/margin_12"
                    android:paddingTop="4dp"
                    android:text="前台收银"
                    android:textColor="@color/color_subtitle"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_12"
                android:paddingLeft="@dimen/margin_12"
                android:text="蓝牙："
                android:textColor="@color/color_subtitle"
                android:textSize="12sp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_12"
            android:background="@drawable/btn_bg_white_stroke"
            android:paddingBottom="6dp"
            android:paddingLeft="@dimen/margin_12"
            android:paddingRight="@dimen/margin_12"
            android:paddingTop="6dp"
            android:text="连接打印"
            android:textColor="@color/red"
            android:textSize="16sp" />
    </LinearLayout>

    <View style="@style/view_line_horizontal_1"
        android:layout_marginLeft="@dimen/margin_12"/>

</LinearLayout>