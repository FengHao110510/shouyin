<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tag_flow"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_tag_flow_layout"
        android:paddingBottom="@dimen/margin_6"
        android:paddingLeft="@dimen/margin_12"
        android:paddingRight="@dimen/margin_12"
        android:paddingTop="@dimen/margin_6"
        android:text=""
        android:textColor="@drawable/bg_tag_flow_layout_text_color"
        android:textSize="@dimen/txt_14" />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <ImageView
            android:id="@+id/iv_tag_flow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/groupdelet" />
    </FrameLayout>
</FrameLayout>