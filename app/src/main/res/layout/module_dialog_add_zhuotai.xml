<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="批量添加"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_dialog_zhuotaiguige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:hint="桌台规格，例如4人桌输入4"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <View
        style="@style/view_line_horizontal_1"
        android:layout_marginTop="5dp" />

    <EditText
        android:id="@+id/et_dialog_zhuotaishuliang"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:hint="桌台数量"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <View
        style="@style/view_line_horizontal_1"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_addzhuotai_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black"

            android:textSize="14sp" />

        <View
            style="@style/view_line_vertical_1"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/tv_dialog_addzhuotai_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>