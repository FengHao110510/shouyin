<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_item_turnover_turnover_first_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-07-16"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_item_turnover_turnover_first_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="18"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/tv_item_turnover_turnover_first_price"
        android:text="收入"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <View
        style="@style/view_line_horizontal_1"
        android:layout_below="@id/tv_item_turnover_turnover_first_price"
        android:layout_marginTop="8dp" />


</RelativeLayout>
